<Window x:Class="DGM_windows.Memo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DGM_windows"
        mc:Ignorable="d"
        Title="Memo" Height="200" Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"  ShowInTaskbar="False">
    <Grid>
        <Rectangle Fill="White" Height="200" Width="400" RadiusX="10" RadiusY="10"/>
        <Grid Margin="0 10 0 0" Width="380" Height="180" HorizontalAlignment="Center" VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="140"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBox Name="SaveDescription" Grid.Row="0" Text="일정을 입력하세요." Background="Transparent" BorderBrush="Black" />
            <Grid Grid.Row="2">
                <Rectangle Name="SaveButton" Fill="White" Stroke="Black" RadiusX="5" RadiusY="5" MouseDown="SaveButton_MouseDown"/>
                <Label Content="저장" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
